/* components/tab-bar/index.wxss */

.sleeve{
    font-family: sleeve !important;
    color:#157658 !important;
}

.container{
    height: 100rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    background-color: #fff;
}

.icons{
    box-sizing: border-box;
    padding-left: 16rpx;
    padding-right: 22rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    height: 100%;
    width: 230rpx;
    color: #999;
}

.icons > view{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 50%;
}

.icons > view:nth-child(2){
    padding-top: 6rpx;
}
.icons text{
    font-size: 26rpx;
}

.cart{
    background-color: #333;
    width: 260rpx;
    height: 100%;
}

.buy{
    background-color: #157658;
    width: 260rpx;
    height: 100%;
}

.btn-font{
    color: #fff;
    font-size: 32rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}


