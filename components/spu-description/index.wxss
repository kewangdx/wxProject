/* components/spu-description/index.wxss */

.container{
    width: 100%;
    box-sizing: border-box;
    background-color: #fff;
    padding: 34rpx 30rpx 26rpx 30rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.left{
    flex: 1;
    display: flex;
    flex-direction: column;
}

.tags{
    display: flex;
}
.l-tag{
    margin-right: 6rpx !important;
}
.l-price-unit{
    margin-right: 4rpx !important;
}

.subtitle{
    color: #999;
    font-size: 28rpx;
    font-weight: 400;
    margin-top: 40rpx;
    margin-bottom: 16rpx;
}


.price-row{
    display: flex;
    align-items: baseline;
}

.discount-price{
    margin-left: 20rpx;
    margin-right: 80rpx;
}

.discount-tag{
    position: relative !important;
    bottom: 4rpx;
    width: 50rpx;
    border-radius: 20rpx !important;
}

.right{
    margin-left: 20rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
    border-left: 2px dashed #F5F5F5;
    width: 78rpx;
    height: 120rpx;
}

.inner{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #DCEBE6;
    width: 50rpx;
    height: 120rpx;
}

.inner text{
    font-size: 20rpx;
    color: #157658;
}